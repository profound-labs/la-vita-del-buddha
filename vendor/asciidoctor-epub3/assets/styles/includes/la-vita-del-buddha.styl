section > h2
  font-family: $section-font !important
  font-weight: 600
  font-style: normal
  text-transform: uppercase
  word-spacing: 3px
  margin-top: 2em

.chapter-number
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1.9rem
  margin-top: 4rem
  margin-bottom: 2rem
  text-align: center

h1.chapter-title
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1.9rem
  margin-top: 2rem
