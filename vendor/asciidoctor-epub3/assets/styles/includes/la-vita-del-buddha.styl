
p.narrator
  text-indent: -2em
  padding-left: 2em
  &> code.literal
    font-family: "Fontin Sans SC"
    font-size: 21px
    letter-spacing: 0.5px
    color: #6B6B6B

p.voice > code.literal
    font-family: "Fontin Sans SC"
    font-size: 21px
    letter-spacing: 0.5px
