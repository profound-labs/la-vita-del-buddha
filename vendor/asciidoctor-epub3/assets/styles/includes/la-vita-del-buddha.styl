.narrator
  text-indent: -2em
  padding-left: 2em

.cantor > blockquote > p:first-child
  text-indent: -2em

.narrator, .voice, .cantor
  strong:first-child
    font-family: "Fontin Sans SC"
    font-size: 0.9em
    letter-spacing: 0.5px
    color: #6B6B6B

section > h2
  font-family: $section-font !important
  font-weight: 600
  font-style: normal
  text-transform: uppercase
  word-spacing: 3px
  margin-top: 2em

.chapter-number
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1.9rem
  margin-top: 4rem
  margin-bottom: 2rem
  text-align: center

h1.chapter-title
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1.9rem
  margin-top: 2rem
  margin-bottom: 3rem
  text-align: center

.center, .center p
  text-align: center

.namo-tassa
  margin-top: 5rem
  text-align: center

.suttaref
  text-align: right

.titlepage-traduzione
  text-align: center
  margin-top: 3rem

.titlepage-custom-author
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1rem
  margin-top: 1rem
  margin-bottom: 3rem
  text-align: center
