.narrator
  text-indent: -2em
  padding-left: 2em

.narrator-cont
  padding-left: 2em

.cantor > blockquote > p:first-child
  text-indent: -2em

.narrator, .voice, .cantor
  strong:first-child
    font-family: "Fontin Sans SC"
    font-style: normal
    font-weight: normal
    font-size: 0.9em
    letter-spacing: 0.5px
    color: #6B6B6B

.cantor blockquote:first-child p:first-child
    padding-bottom: 0pt

li > span.principal, dd > span.principal
  text-align: left

sup.noteref
  font-style: normal

blockquote em
  font-style: normal

section > h2
  font-family: $section-font !important
  font-weight: normal
  font-style: normal
  word-spacing: 3px
  margin-top: 2em

.chapter-number
  font-family: $header-font !important
  font-style: normal
  font-weight: normal
  font-size: 1.9rem
  margin-top: 4rem
  margin-bottom: 2rem
  text-align: center

h1.chapter-title
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1.9rem
  margin-top: 2rem
  margin-bottom: 3rem
  text-align: center

.center, .center p
  text-align: center

.namo-tassa
  margin-top: 5rem
  text-align: center

.suttaref
  text-align: right

.titlepage-traduzione
  text-align: center
  margin-top: 2rem

.titlepage-custom-author
  font-family: $chapter-font !important
  font-style: normal
  font-weight: normal
  font-size: 1rem
  margin-top: 1rem
  margin-bottom: 2rem
  text-align: center

.titlepage-description-para
  font-family: $section-font !important
  font-size: 1.25em
  font-style: normal
  font-weight: normal
  word-spacing: 3px
  text-align: center
